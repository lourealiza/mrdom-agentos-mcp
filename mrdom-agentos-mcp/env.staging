# MrDom SDR AgentOS + Bedrock - Ambiente de Staging

# Aplicação
APP_NAME=MrDom SDR AgentOS + Bedrock
VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# AWS Bedrock
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION:-us-east-1}
BEDROCK_MODEL=${BEDROCK_MODEL:-amazon.nova-lite-v1:0}

# OpenAI (Fallback)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Chatwoot
CHATWOOT_BASE_URL=${CHATWOOT_BASE_URL}
CHATWOOT_ACCESS_TOKEN=${CHATWOOT_ACCESS_TOKEN}
CHATWOOT_ACCOUNT_ID=${CHATWOOT_ACCOUNT_ID}
CHATWOOT_HMAC_SECRET=${CHATWOOT_HMAC_SECRET}

# N8N
N8N_BASE_URL=${N8N_BASE_URL}
N8N_API_KEY=${N8N_API_KEY}

# Banco de Dados
DATABASE_URL=${DATABASE_URL}

# Redis
REDIS_URL=${REDIS_URL}

# AgentOS
AGENTOS_ENABLED=true
AGENT_MAX_TOKENS=4000
AGENT_TEMPERATURE=0.7

# Monitoramento
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# Segurança
SECRET_KEY=${SECRET_KEY}
ALLOWED_HOSTS=${ALLOWED_HOSTS}

# CORS
CORS_ORIGINS=${CORS_ORIGINS}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=60
